@model IEnumerable<Inscript_v5.Models.InscriptionsModel>

@{
    ViewBag.Title = "Filter";
}

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

<script>
    function clearSearch() {
        document.getElementById("SearchText").value = "";
        document.forms[0].submit();
    }

    $(document).ready(function () {
        new DataTable('#inscriptionsTable');
    });
</script>

<div class="card" style="width: 100%; margin: 0 auto; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); padding: 10px;">
    <h1 id="pageHeading" class="center">Inscription Database</h1>
    
    <div class="center">
        <p style="margin-top: 5px;"><a href="/InscriptionText/AdvancedSearch" class="btn btn-sm">Search Text &raquo;</a></p>
    </div>

    <br />

    <table id="inscriptionsTable" class="display">
        <thead>
            <tr id="tableHeading" class="text-center">
                <th>
                    <h5>@Html.DisplayNameFor(model => model.InscriptionName)</h5>
                </th>
                <th>
                    <h5>@Html.DisplayNameFor(model => model.Date)</h5>
                </th>
                <th>
                    <h5>@Html.DisplayNameFor(model => model.Language)</h5>
                </th>
                <th>
                    <h5>@Html.DisplayNameFor(model => model.Location)</h5>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Inscriptions", new { id = item.InscriptionID })">
                            @Html.DisplayFor(modelItem => item.InscriptionName)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<br />

