@model Inscript_v5.Models.TranslationsModel

@{
    ViewBag.Title = "Details";
}

<style>
    #formattedText {
        display: inline;
        margin: 0;
        padding: 0;
        border: none;
        font-family: Time New Roman;
        font-size: 15pt;
        line-height: 1.6;
        background-color: transparent;
    }

</style>

<div>

    <table>
        <tr class="form-group">
            <td>
                <div class="col-md-10">
                    <pre id="formattedText" class="preformatted-text">@Html.Raw(Model.TranslationText)
                    </pre>
                </div>
            </td>
        </tr>
    </table>
</div>
